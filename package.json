{
  "name": "miranum-json-forms",
  "displayName": "Miranum: Json Forms",
  "description": "Edit JSON Schema files with an modern easy to use editor.",
  "license": "Apache License 2.0",
  "version": "0.0.1",
  "publisher": "miragon-gmbh",
  "repository": {
    "type": "git",
    "url": "https://github.com/FlowSquad/miranum-vs-code-forms.git"
  },
  "bugs": {
    "url": "https://github.com/FlowSquad/miranum-vs-code-forms/issues"
  },
  "engines": {
    "vscode": "^1.69.0"
  },
  "icon": "images/komet.png",
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "onCustomEditor:jsonforms-modeler",
    "onCommand:jsonforms-renderer.togglePreview",
    "onCommand:jsonforms-modeler.toggleTextEditor"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "jsonforms-modeler",
        "id": "jsonforms-modeler",
        "displayName": "Miranum Json Forms",
        "selector": [
          {
            "filenamePattern": "*.jsonform"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "jsonforms-renderer.togglePreview",
        "title": "Miranum: Toggle Preview",
        "icon": "$(notebook-render-output)"
      },
      {
        "command": "jsonforms-modeler.toggleTextEditor",
        "title": "Miranum: Toggle Standard Text Editor",
        "icon": "$(notebook-mimetype)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "jsonforms-renderer.togglePreview",
          "when": "resourceExtname == .form && jsonforms-modeler.openCustomEditors > 0"
        },
        {
          "command": "jsonforms-modeler.toggleTextEditor",
          "when": "resourceExtname == .form && jsonforms-modeler.openCustomEditors > 0"
        }
      ],
      "editor/title": [
        {
          "command": "jsonforms-renderer.togglePreview",
          "group": "navigation",
          "when": "resourceExtname == .form && jsonforms-modeler.openCustomEditors > 0"
        },
        {
          "command": "jsonforms-modeler.toggleTextEditor",
          "group": "navigation",
          "when": "resourceExtname == .form && jsonforms-modeler.openCustomEditors > 0"
        }
      ]
    },
    "keybindings": [
      {
        "command": "jsonforms-renderer.togglePreview",
        "key": "ctrl+shift+p",
        "when": "resourceExtname == .form && jsonforms-modeler.openCustomEditors > 0"
      },
      {
        "command": "jsonforms-modeler.toggleTextEditor",
        "key": "ctrl+shift+t",
        "when": "resourceExtname == .form && jsonforms-modeler.openCustomEditors > 0"
      }
    ]
  },
  "scripts": {
    "publish": "vsce publish",
    "vscode:prepublish": "npm run build",
    "build": "tsup src/extension.ts --dts --external=vscode",
    "web": "vite build --config src/web/vite.config.js",
    "web-dev": "vite build --config src/web/vite.config.js --watch",
    "watch": "tsup src/extension.ts --dts --external=vscode --sourcemap",
    "test": "node ./out/test/runTest.js",
    "doc": "typedoc --options ./docs/typedoc.json"
  },
  "dependencies": {
    "@backoffice-plus/formbuilder": "0.0.17",
    "@jsonforms/core": "^3.0.0",
    "@jsonforms/examples": "^3.0.0",
    "@jsonforms/vue": "^3.0.0",
    "@vueuse/core": "^9.11.1",
    "core-js": "^3.8.3",
    "tailwindcss": "^3.2.4",
    "vue": "^3.2.13",
    "vue-class-component": "^8.0.0-0"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "@types/vscode": "^1.69.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vscode/test-electron": "^2.1.3",
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "tsup": "^6.2.2",
    "typescript": "^4.5.5",
    "vite": "^4.1.1"
  }
}
